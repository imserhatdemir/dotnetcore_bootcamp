@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="/tadmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/tadmin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/tadmin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="/tadmin/css/animate.css" rel="stylesheet">
    <link href="/tadmin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">
    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">IN+</h1>

            </div>
            <h3>Register to IN+</h3>
            <p>Hesap Oluştur</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Ad Soyad" asp-for="@Model.nameSurname">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="@Model.Username">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifre"  asp-for="@Model.Password">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="@Model.ConfirmPassword">
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanıcı sözleşmesini okudum </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kaydol</button>

                <p class="text-muted text-center"><small>Bir Hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Register/Login/">Login</a>

                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>
            </form>
            <p class="m-t"> <small>ASP.NET Core BOOTCAMP &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="/tadmin/js/jquery-3.1.1.min.js"></script>
    <script src="/tadmin/js/popper.min.js"></script>
    <script src="/tadmin/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="/tadmin/js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
