@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>MessageDetails</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Ekle</h4>
            <p class="card-description"> Blog Oluştur</p>

                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Küçük Resim</label>
                    @Html.TextBoxFor(x => x.MessageDetails, new { @class = "form-control" })
                </div>
                <button class="btn btn-light">Cancel</button>
        </div>
    </div>
</div>